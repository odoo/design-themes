<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!-- Theme Header - Layout -->
<template id="template_header_custom" inherit_id="website.layout" name="Test Theme Custom Header Template">
    <xpath expr="//header//nav" position="replace">
        <nav data-name="Navbar" class="navbar navbar-expand-lg">
            <div class="container">
                <t t-call="website.placeholder_header_brand"/>
                <t t-call="website.navbar_nav">
                    <!-- Menu -->
                    <t t-foreach="website.menu_id.child_id" t-as="submenu">
                        <t t-call="website.submenu" item_class.f="nav-item" link_class.f="nav-link"/>
                    </t>
                    <!-- Sign In -->
                    <t t-call="portal.placeholder_user_sign_in"
                        _item_class.f="nav-item"
                        _link_class.f="nav-link text-900"/>
                    <!-- User Dropdown -->
                    <t t-call="portal.user_dropdown"
                        _user_name="true"
                        _item_class.f="nav-item dropdown ml-auto"
                        _link_class.f="nav-link text-900"/>
                </t>
            </div>
        </nav>
    </xpath>
</template>

</odoo>
