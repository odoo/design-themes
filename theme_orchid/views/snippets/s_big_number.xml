<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="s_big_number" inherit_id="website.s_big_number">
    <!-- Section -->
    <xpath expr="//section" position="attributes">
        <attribute name="data-oe-shape-data">{"shape":"html_builder/Blobs/17","colors":{"c5": "o-color-1"}}</attribute>
    </xpath>

    <!-- Shape -->
    <xpath expr="//div[hasclass('o_we_shape')]" position="replace">
        <div class="o_we_shape o_html_builder_Blobs_17" style="background-image: url('/html_editor/shape/html_builder/Blobs/17.svg?c5=o-color-1');"/>
    </xpath>

    <!-- Text -->
    <xpath expr="//h2/span" position="replace" mode="inner">
        50+
    </xpath>
    <xpath expr="//p/span" position="replace" mode="inner">
        varieties of flowers to choose from
    </xpath>
</template>

</odoo>
